#!/usr/bin/env ruby

$:.unshift File.join(File.dirname(__FILE__), "../lib")

require 'ssh_scan'
require 'ssh_scan_worker/worker'

# Usage: ruby ./bin/ssh_scan_worker [test/development/production]

# Get the worker config from command-line or via an example location 
config_file = ARGV[0] ||
              File.join(
                File.dirname(__FILE__),
                "../config/worker/config.yml"
              )

worker = SSHScan::Worker.from_config_file(config_file)
worker.run!
